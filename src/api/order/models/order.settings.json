{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": "Pedido de um cliente"
  },
  "attributes": {
    "customer": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "items": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "product"
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "status": {
      "type": "string",
      "default": "pendente"
    }
  }
}
